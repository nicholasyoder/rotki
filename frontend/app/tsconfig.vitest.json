{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"],
      "@electron/*": ["./electron/*"],
      "@test/*": ["./tests/unit/*"]
    }
  },
  "include": [
    "env.d.ts",
    "components.d.ts",
    "auto-imports.d.ts",
    "typed-router.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.spec.ts",
    "tests/unit/**/*",
    "shared/**/*"
  ],
  "exclude": []
}
