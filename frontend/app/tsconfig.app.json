{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"],
      "@electron/*": ["./electron/*"]
    }
  },
  "vueCompilerOptions": {
    "plugins": [
      {
        "name": "vue-router/volar/sfc-typed-router",
        "options": { "rootDir": "./" }
      },
      "vue-router/volar/sfc-route-blocks"
    ]
  },
  "include": [
    "env.d.ts",
    "components.d.ts",
    "auto-imports.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "shared/**/*",
    "electron/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "**/.*",
    "tests/**/*",
    "src/**/__tests__/*",
    "src/**/*.spec.ts"
  ]
}
